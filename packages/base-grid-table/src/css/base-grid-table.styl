$color-base-grid-table-border ?= #DCDCDC
$color-base-grid-table-header-bg ?= #F3F3F3
$color-base-grid-table-selected-row-border ?= #0070D2
$color-base-grid-table-row-bg ?= #fff
$color-base-grid-table-hover-row-bg ?= rgba($color-base-grid-table-selected-row-border, .2)
$color-base-grid-table-selected-row-bg ?= rgba($color-base-grid-table-selected-row-border, .2)

.base-grid-table
  box-sizing border-box
  display flex
  flex-direction column
  border 1px solid $color-base-grid-table-border
  overflow-x hidden
  position relative
  >.no-data
    text-align center
    position absolute
    top 50%
    margin-top -50px
    width 100% !important
    padding 10px 0

.base-grid-table-header
.base-grid-table-row
  box-sizing border-box
  width 100%
  display flex
  line-height 1.2
  background $color-base-grid-table-row-bg
  >div:not(:first-child)
    border-left solid 1px $color-base-grid-table-border
.base-grid-table-row
  cursor pointer
  transition all .3s ease-in-out
  position relative
  border-top solid 1px $color-base-grid-table-border
  border-bottom solid 1px $color-base-grid-table-border
  border-left solid 1px transparent
  border-right solid 1px transparent
  &:not(:first-child)
    margin-top -1px
  &:hover
    background $color-base-grid-table-hover-row-bg
  &.selected
    background $color-base-grid-table-selected-row-bg
    border solid 1px $color-base-grid-table-selected-row-border
    + .base-grid-table-row
      border-top solid 1px $color-base-grid-table-selected-row-border

.base-grid-table-header
  font-size 14px
  border-left solid 1px transparent
  border-right solid 1px transparent
  border-bottom solid 1px $color-base-grid-table-border
  background $color-base-grid-table-header-bg
  >div
    box-sizing border-box
    padding 10px 4px

.base-grid-table-content
  box-sizing border-box
  flex 1
  height 0
  min-height 0
  position relative
  overflow-y auto
  font-size 12px
  word-break break-all
  overflow-x hidden
  >div:first-child
    &:before
      top -1px
.base-grid-table-row
  >div
    box-sizing border-box
    padding 8px 10px
    display flex
    flex-direction row
    align-items center
    >.base-grid-table-cell
      box-sizing border-box
      flex 1
      min-width 0
      width 0
.base-grid-table-full-row
  box-sizing border-box
  >div
    box-sizing border-box
    flex 1

